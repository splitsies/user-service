{
  "name": "user-service",
  "version": "1.0.0",
  "description": "Serverless aws-nodejs-typescript template",
  "main": "serverless.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "./utils/local-startup/startup.sh",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "start-auth": "firebase emulators:start --only auth",
    "start-db": "cd utils/local-db && docker-compose -p splitsies-user-db up",
    "recreate-db": "./utils/local-db/recreate.sh",
    "kill-db": "docker kill splitsies-expense-db-local"
  },
  "engines": {
    "node": ">=14.15.0"
  },
  "prettier": "@splitsies/formatting",
  "dependencies": {
    "@middy/core": "^3.4.0",
    "@middy/http-json-body-parser": "^3.4.0",
    "@splitsies/formatting": "^1.0.0",
    "@splitsies/shared-models": "0.0.13",
    "@splitsies/utils": "0.0.17",
    "firebase": "^10.4.0",
    "inversify": "6.0.1",
    "mathjs": "^11.8.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@serverless/typescript": "^3.0.0",
    "@splitsies/formatting": "^1.0.0",
    "@types/aws-lambda": "^8.10.71",
    "@types/node": "^14.14.25",
    "esbuild": "^0.14.11",
    "json-schema-to-ts": "^1.5.0",
    "prettier": "^2.8.7",
    "serverless-esbuild": "^1.23.3",
    "serverless-offline": "^12.0.4",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.3"
  },
  "author": "The serverless webpack authors (https://github.com/elastic-coders/serverless-webpack)",
  "license": "MIT"
}
